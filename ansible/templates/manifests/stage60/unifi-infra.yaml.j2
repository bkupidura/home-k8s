---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: unifi
  namespace: home-infra
spec:
  accessModes:
  - {{ global.k8s.storage.class.default.mode }}
  resources:
    requests:
      storage: 5Gi
  storageClassName: {{ global.k8s.storage.class.default.name }}

---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: unifi
  namespace: home-infra
spec:
  entryPoints:
  - websecure
  routes:
  - match: Host(`unifi.{{ global.domain }}`)
    kind: Rule
    services:
      - name: unifi
        port: 443
        namespace: home-infra
        scheme: https
    middlewares:
      - name: lan-whitelist
        namespace: traefik-system
      - name: x-forwarded-proto-https
        namespace: traefik-system
  tls:
    secretName: "{{ global.domain | replace('.', '-') }}-tls"

---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: unifi-http
  namespace: home-infra
spec:
  entryPoints:
  - web
  routes:
  - match: Host(`unifi.{{ global.domain }}`)
    kind: Rule
    services:
      - name: unifi
        port: 80
        namespace: home-infra
        scheme: http
    middlewares:
      - name: lan-whitelist
        namespace: traefik-system

---
apiVersion: batch/v1
kind: CronJob
metadata:
  name: unifi-restic-restore
  namespace: home-infra
spec:
  concurrencyPolicy: Forbid
  schedule: "0 0 * * *"
  suspend: true
  jobTemplate:
    spec:
      template:
        spec:
          hostname: unifi
          volumes:
            - name: data
              persistentVolumeClaim:
                claimName: unifi
          containers:
          - name: restore
            image: {{ manifest.versions.restic.repository }}:{{ manifest.versions.restic.tag }}
            args:
            - "--repo"
            - "{{ manifest.backup.restic.repo }}"
            - "--verbose"
            - "restore"
            - "latest"
            - "--host"
            - "unifi"
            - "--target"
            - "/data"
            volumeMounts:
            - mountPath: "/data"
              name: data
            envFrom:
            - secretRef:
                name: restic-secrets
          restartPolicy: OnFailure

---
apiVersion: batch/v1
kind: CronJob
metadata:
  name: unifi-restic-backup
  namespace: home-infra
spec:
  concurrencyPolicy: Forbid
  schedule: "00 04 * * *"
  jobTemplate:
    spec:
      template:
        spec:
          hostname: unifi
          volumes:
            - name: data
              persistentVolumeClaim:
                claimName: unifi
          containers:
          - name: backup
            image: {{ manifest.versions.restic.repository }}:{{ manifest.versions.restic.tag }}
            command:
            - "/bin/sh"
            - "-ec"
            - |
              cd /data
              restic --repo "{{ manifest.backup.restic.repo }}" --verbose backup .
            volumeMounts:
            - mountPath: "/data"
              name: data
            envFrom:
            - secretRef:
                name: restic-secrets
          restartPolicy: OnFailure
          affinity:
            podAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                - labelSelector:
                    matchExpressions:
                      - key: app.kubernetes.io/name
                        operator: In
                        values:
                          - unifi
                  topologyKey: kubernetes.io/hostname
