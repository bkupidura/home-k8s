---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: loki
  namespace: kube-system
spec:
  chart: loki-stack
  repo: https://grafana.github.io/helm-charts
  version: {{ manifest.versions.loki.chart }}
  targetNamespace: home-infra
  valuesContent: |-
    loki:
      enabled: true
      persistence:
        enabled: true
        existingClaim: loki
      resources:
        requests:
          cpu: 20m
          memory: 128Mi
        limits:
          cpu: 30m
          memory: 156Mi
    promtail:
      enabled: true
      resources:
        requests:
          cpu: 20m
          memory: 64Mi
        limits:
          cpu: 40m
          memory: 128Mi
    fluent-bit:
      enabled: false
    grafana:
      enabled: false
    prometheus:
      enabled: false
    filebeat:
      enabled: false
    logstash:
      enabled: false
