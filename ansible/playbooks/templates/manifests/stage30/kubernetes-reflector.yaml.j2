---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: kubernetes-reflector
  namespace: kube-system
spec:
  repo: https://emberstack.github.io/helm-charts
  chart: reflector
  version: {{ manifest.versions.reflector.chart }}
  targetNamespace: kube-system
  valuesContent: |-
    resources:
      requests:
        cpu: 200m
        memory: 128Mi
      limits:
        cpu: 300m
        memory: 256Mi
