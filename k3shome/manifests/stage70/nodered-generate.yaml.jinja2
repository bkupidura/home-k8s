---
apiVersion: helm.cattle.io/v1
kind: HelmChart
metadata:
  name: node-red
  namespace: kube-system
spec:
  chart: node-red
  repo: https://k8s-at-home.com/charts/
  version: {{ manifest.versions.nodered.chart }}
  targetNamespace: smart-home
  valuesContent: |-
    env:
      TZ: {{ manifest.timezone }}
    image:
      repository: {{ manifest.versions.nodered.image.repository }}
      tag: {{ manifest.versions.nodered.image.tag }}
    persistence:
      data:
        enabled: true
        existingClaim: node-red
    ingress:
      main:
        enabled: false
    podSecurityContext:
      fsGroup: 1000
