---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: recorder
  namespace: smart-home
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: {{ manifest.recorder.volume.size }}
  storageClassName: longhorn-standard

---
apiVersion: batch/v1beta1
kind: CronJob
metadata:
  name: recorder-cleanup
  namespace: smart-home
spec:
  concurrencyPolicy: Forbid
  schedule: "15 6,18 * * *"
  suspend: false
  jobTemplate:
    spec:
      template:
        spec:
          volumes:
            - name: recorder-data
              persistentVolumeClaim:
                claimName: recorder
          containers:
          - name: cleanup
            image: {{ manifest.versions.recorder.cleanup.repository }}:{{ manifest.versions.recorder.cleanup.tag }}
            command:
            - "/bin/sh"
            - "-ec"
            - |
              find /data -type f -mtime +7 -delete
              find /data -mindepth 1 -type d -empty -delete
            volumeMounts:
            - mountPath: "/data"
              name: recorder-data
          restartPolicy: OnFailure
          affinity:
            podAffinity:
              requiredDuringSchedulingIgnoredDuringExecution:
                - labelSelector:
                    matchExpressions:
                      - key: app.kubernetes.io/name
                        operator: In
                        values:
                          - recorder
                  topologyKey: kubernetes.io/hostname

---
apiVersion: traefik.containo.us/v1alpha1
kind: IngressRoute
metadata:
  name: recorder
  namespace: smart-home
spec:
  entryPoints:
    - websecure
  routes:
  - match: Host(`recorder.{{ manifest.domain }}`)
    kind: Rule
    services:
      - name: recorder
        port: 8043
    middlewares:
      - name: basic-auth
        namespace: traefik-system
  tls:
    secretName: {{ manifest.traefik.tls.secret_name }}

---
apiVersion: v1
kind: Service
metadata:
  name: recorder
  namespace: smart-home
  labels:
    app.kubernetes.io/name: recorder
spec:
  type: ClusterIP
  publishNotReadyAddresses: false
  ports:
    - name: recorder
      port: 8043
      protocol: TCP
      targetPort: 8043
  selector:
    app.kubernetes.io/name: recorder

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: recorder
  namespace: smart-home
  labels:
    app.kubernetes.io/name: recorder
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: recorder
  template:
    metadata:
      labels:
        app.kubernetes.io/name: recorder
    spec:
      containers:
        - name: web
          image: {{ manifest.versions.recorder.web.repository }}:{{ manifest.versions.recorder.web.tag }}
          imagePullPolicy: Always
          livenessProbe:
            httpGet:
              path: /
              port: gostatic
            initialDelaySeconds: 5
          ports:
            - name: gostatic
              containerPort: 8043
              protocol: TCP
          volumeMounts:
            - mountPath: /srv/http
              name: data
          env:
            - name: TZ
              value: {{ manifest.timezone }}
        - name: recorder
          image: {{ manifest.versions.recorder.repository }}:{{ manifest.versions.recorder.tag }}
          imagePullPolicy: Always
          volumeMounts:
            - mountPath: /data
              name: data
            - mountPath: /config
              name: secret
            - name: dev-dri-renderd128
              mountPath: /dev/dri/renderD128
          securityContext:
            privileged: true
          livenessProbe:
            exec:
              command:
                - /bin/sh
                - -c
                - netstat -n|grep ESTABLISHED
            initialDelaySeconds: 5
          env:
            - name: TZ
              value: {{ manifest.timezone }}
            - name: MQTT_SERVER
              value: mosquitto.home-infra:1883
            - name: MQTT_USER
              value: recorder
            - name: MQTT_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: recorder-secret
                  key: mqtt_password
            - name: MQTT_TOPIC
              value: recorder
            - name: FFMPEG_RECORD_CMD
              value: "ffmpeg -rtsp_transport tcp -i %s -t %d -vcodec copy -acodec aac %s"
            - name: FFMPEG_CONCAT_CMD
              value: "nice -n 19 ffmpeg -f concat -safe 0 -vaapi_device /dev/dri/renderD128 -hwaccel vaapi -i %s -vcodec h264_vaapi -acodec copy -preset veryfast -vf format=nv12|vaapi,hwupload %s"
            - name: SSH_STRING
              valueFrom:
                secretKeyRef:
                  name: recorder-secret
                  key: ssh_string
      volumes:
        - name: data
          persistentVolumeClaim:
            claimName: recorder
        - name: secret
          secret:
            secretName: recorder-secret
            defaultMode: 0400
            items:
              - key: id_rsa
                path: id_rsa
        - name: dev-dri-renderd128
          hostPath:
            path: /dev/dri/renderD128
      nodeSelector:
        video_processing: "true"
      affinity:
        podAntiAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            - labelSelector:
                matchExpressions:
                  - key: app.kubernetes.io/name
                    operator: In
                    values:
                      - frigate
              topologyKey: kubernetes.io/hostname
