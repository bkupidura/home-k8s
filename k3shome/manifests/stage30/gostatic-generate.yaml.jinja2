---
apiVersion: v1
kind: Service
metadata:
  name: gostatic
  namespace: home-infra
  labels:
    app.kubernetes.io/name: gostatic
spec:
  type: ClusterIP
  publishNotReadyAddresses: false
  ports:
    - name: gostatic
      port: 8043
      protocol: TCP
      targetPort: 8043
  selector:
    app.kubernetes.io/name: gostatic

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gostatic
  namespace: home-infra
  labels:
    app.kubernetes.io/name: gostatic
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: gostatic
  template:
    metadata:
      labels:
        app.kubernetes.io/name: gostatic
    spec:
      containers:
        - name: gostatic
          image: {{ manifest.versions.gostatic.repository }}:{{ manifest.versions.gostatic.tag }}
          imagePullPolicy: Always
          livenessProbe:
            httpGet:
              path: /
              port: gostatic
            initialDelaySeconds: 5
          ports:
            - name: gostatic
              containerPort: 8043
              protocol: TCP
          volumeMounts:
            - mountPath: /srv/http
              name: statics
          env:
            - name: TZ
              value: {{ manifest.timezone }}
      volumes:
        - name: statics
          configMap:
            name: static-generated
