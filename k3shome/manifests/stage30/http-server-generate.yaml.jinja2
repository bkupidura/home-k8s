---
apiVersion: v1
kind: Service
metadata:
  name: http
  namespace: home-infra
  labels:
    app.kubernetes.io/name: http
spec:
  type: ClusterIP
  publishNotReadyAddresses: false
  ports:
    - name: http
      port: 8080
      protocol: TCP
      targetPort: 8080
  selector:
    app.kubernetes.io/name: http

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: http
  namespace: home-infra
  labels:
    app.kubernetes.io/name: http
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: http
  template:
    metadata:
      labels:
        app.kubernetes.io/name: http
    spec:
      containers:
        - name: http
          image: {{ manifest.versions.http_server.repository }}:{{ manifest.versions.http_server.tag }}
          imagePullPolicy: IfNotPresent
          livenessProbe:
            httpGet:
              path: /
              port: http
            initialDelaySeconds: 5
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          volumeMounts:
            - mountPath: /web
              name: statics
          env:
            - name: TZ
              value: {{ manifest.timezone }}
      volumes:
        - name: statics
          configMap:
            name: static-generated
